<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Forget Password</h1>
        <%- include ("./partials/messages"); %>
        <form action="/users/forget-password" method="POST">
          <div class="form-group">
            <label for="email">Enter Your Register Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <button type="submit" class="btn btn-dark btn-block">Submit</button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/users/register">register</a> <br>
          Already Account <a href="/users/login">Login</a>

        </p>
      </div>
    </div>
  </div>